@model IEnumerable<WebApplication2.Models.Categoria>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Listagem de Categorias";
}
@if (@TempData["Message"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["Message"]
    </div>
}

<div class="panel panel-primary">
    <div class="panel-heading">
        Relação de Categorias registrados
    </div>
    <div class="panel-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>
                    <th></th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CategoriaId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.ActionLink("Alterar", "Edit", new { id = item.CategoriaId }) |
                        @Html.ActionLink("Detalhes", "Details", new { id = item.CategoriaId }) |
                        @Html.ActionLink("Eliminar", "Delete", new { id = item.CategoriaId })
                    </td>
                </tr>
            }
        </table>
    </div>
    </div>
    <div class="panel-footer panel-info">
        @Html.ActionLink("Registrar um nova Categoria", "Create", null, new { @class = "btn btn-success" })
    </div>
    @section styles{
        <link href="@Url.Content("~/content/DataTables-1.10.2/css/dataTables.bootstrap.css")" rel="stylesheet" />
    }
    @section ScriptPage{
        <script src="@Url.Content("~/scripts/DataTables-1.10.2/jquery.dataTables.js")"></script>
        <script src="@Url.Content("~/scripts/DataTables-1.10.2/dataTables.bootstrap.js")"></script>
        <script type="text/javascript">
            $(document).ready(function () {
                $('.table').dataTable({
                    "order": [[1, "asc"]]
                });

        </script>
        <script type="text/javascript">
            $(document).ready(function () {
                $('li').removeClass("active");
                $('#liCategoria').addClass("active");
            });
        </script>
    }
